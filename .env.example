# Claude API Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here

# File Processing Configuration
INPUT_FOLDER=./input-files
OUTPUT_FOLDER=./output-files

# Export Format Options: txt, md, docx, original
# txt = Plain text (best for Copilot Studio)
# md = Markdown (good for Copilot Studio, structured)
# docx = Word document (formatted, human-friendly)
# original = Keep original file format
# Leave blank to be prompted each time
EXPORT_FORMAT=txt

# Optimization Settings
MAX_PAGES_BEFORE_SPLIT=10
MIN_PAGES_FOR_SPLIT=5
MIN_WORDS_PER_TOPIC=500
WORD_COUNT_REDUCTION_THRESHOLD=0.20

# Performance Settings
# Number of topics to optimize concurrently when splitting documents
# Recommended: 3 for Free tier, 5-10 for Build tier, 10+ for Scale tier
CONCURRENT_TOPIC_OPTIMIZATIONS=3
